---
import ClientRouter from "astro/components/ClientRouter.astro";

interface Props {
  title?: string;
}

const { title = "keys. | Secure API Key Generator" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta
      name="description"
      content="Generate secure, random API keys locally in your browser. No backend, 100% private."
    />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-bg: #ffffff;
    --color-surface: #ffffff;
    --color-surface-hover: #f4f4f5;
    --color-primary: #18181b;
    --color-text: #18181b;
    --color-text-dim: #71717a;
    --color-border: #e4e4e7;
    --color-card-text: #18181b;
    --color-card-text-dim: #71717a;
    --font-sans: "Inter", sans-serif;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-sans);
    background-color: var(--color-bg);
    color: var(--color-text);
    overflow-x: hidden;
  }

  * {
    box-sizing: border-box;
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
  }

  /* Typography Utils */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    letter-spacing: -0.025em;
    font-weight: 600;
    margin: 0;
  }

  button {
    font-family: var(--font-sans);
  }
</style>
